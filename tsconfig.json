{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@nomiclabs/hardhat-ethers": ["node_modules/@nomiclabs/hardhat-ethers"],
      "@openzeppelin/contracts": ["node_modules/@openzeppelin/contracts"]
    }
  }
}
